generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tbl_usuario {
  id       Int    @id @default(autoincrement())
  username String
  password String
}

model tbl_categorias {
  id        Int     @id @default(autoincrement())
  nome      String  @db.VarChar(200)
  descricao String? @db.Text
}

model tbl_eletronicos {
  id                  Int     @id @default(autoincrement())
  nome                String
  codigo              String  @unique
  categoria_id        Int?
  fabricante          String?
  preco               Float
  cor                 String?
  processador         String?
  memoria_ram         String?
  armazenamento       String?
  tamanho_tela        String?
  sistema_operacional String?
}

model tbl_estoque {
  id                Int    @id @default(autoincrement())
  produto_id        Int
  quantidade_atual  Int
  quantidade_minima Int
  localizacao       String
}

model tbl_movimentacoes {
  id               Int      @id @default(autoincrement())
  produto_id       Int
  quantidade       Int
  tipo_movimentacao String
  data             DateTime @default(now())
}


